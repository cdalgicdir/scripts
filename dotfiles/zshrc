# Disable globbing on the remote path.
# alias scp='nocorrect noglob scp_wrap'
alias sshfs='nocorrect sshfs'
# alias rsync='noglob rsync'
function scp_wrap {
  local -a args
  local i
  for i in "$@"; do case $i in
    (*:*) args+=($i) ;;
    (*) args+=(${~i}) ;;
  esac; done
  command scp "${(@)args}"
}
